<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorForeground">#ff3f3f3f</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:windowAnimationStyle">@style/noAnimation</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="colorAccent">#fff7c901</item>
        <item name="colorControlActivated">#ff3ca1f1</item>
        <item name="colorPrimary">#ff2b262d</item>
        <item name="colorPrimaryDark">#ff0ba823</item>
        <item name="colorSwitchThumbNormal">#fff1f1f1</item>
    </style>

    <style name="icon_item">
        <item name="android:background">@drawable/ripple_black_circle_bg</item>
        <item name="android:padding">@dimen/dimen_6dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">@dimen/dimen_38dp</item>
        <item name="android:layout_height">@dimen/dimen_38dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_3dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_3dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="left_menu_item">
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:paddingLeft">@dimen/dimen_16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/dimen_48dp</item>
        <item name="android:drawablePadding">@dimen/dimen_32dp</item>
    </style>
    <style name="noAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>
    <style name="toolbar_style">
        <item name="android:background">@color/toolbarColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="layout_scrollFlags">enterAlways|scroll</item>
        <item name="titleTextColor">@color/colorTextToolbar</item>
    </style>

    <style name="toolbar_transparent_style">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="layout_scrollFlags">enterAlways|scroll</item>
        <item name="titleTextColor">@color/black</item>
    </style>
    <style name="tooltip_bubble_text">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">left</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.25</item>
    </style>
    <style name="translucent_theme" parent="@style/AppTheme">
        <item name="android:windowBackground">@color/null_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <dimen name="dimen_16dp">16dp</dimen>
    <dimen name="dimen_6dp">6dp</dimen>
</resources>
