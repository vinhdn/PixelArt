<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_rounded_white"
    android:paddingBottom="@dimen/dimen_20dp"
    android:orientation="vertical">
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:padding="@dimen/dimen_20dp"
        android:text="Buy CUP"
        android:textAllCaps="true"
        android:textSize="@dimen/dimen_18sp"/>


    <LinearLayout
        android:id="@+id/btnClose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_orange_radius"
        android:layout_marginTop="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvContent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnOk"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_5dp"
        android:paddingBottom="70dp"
        android:paddingTop="@dimen/dimen_30dp">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/watch_ad_bg_in_toolbar"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="@dimen/dimen_8dp"
            android:drawablePadding="@dimen/dimen_10dp"
            android:text="500"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_18sp"
            android:drawableLeft="@drawable/diamond"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvPrice500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="@dimen/dimen_8dp"
            android:text="$0.99"
            android:textSize="@dimen/dimen_16sp"/>
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnBuy500"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_40dp"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="@+id/btnClose"
        app:layout_constraintRight_toRightOf="@+id/btnClose"
        app:layout_constraintBottom_toBottomOf="@+id/btnClose"
        android:background="@drawable/ripple_color_app_button_bg_no_radius_top"
        android:text="buy"
        android:textColor="@color/white"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/btnOk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_orange_radius"
        android:layout_marginTop="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvContent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnClose"
        android:gravity="center"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:paddingBottom="70dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Sale 33%"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:background="@color/red"
            android:padding="@dimen/dimen_2dp"
            android:gravity="center"
            android:rotation="25"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="60dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:textSize="9sp"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvNumDiamon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:background="@drawable/watch_ad_bg_in_toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="@dimen/dimen_8dp"
            android:drawablePadding="@dimen/dimen_10dp"
            android:text="1500"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_18sp"
            android:drawableLeft="@drawable/diamond"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvPrice1500"
            app:layout_constraintTop_toBottomOf="@+id/tvNumDiamon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="@dimen/dimen_8dp"
            android:text="$1.99"
            android:textSize="@dimen/dimen_16sp"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnBuy1500"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_40dp"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="@+id/btnOk"
        app:layout_constraintRight_toRightOf="@+id/btnOk"
        app:layout_constraintBottom_toBottomOf="@+id/btnOk"
        android:background="@drawable/ripple_color_app_button_bg_no_radius_top"
        android:text="buy"
        android:textColor="@color/white"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBuy1500"
        android:text="@string/cancel"
        android:textAllCaps="true"
        android:textSize="@dimen/dimen_16sp"
        android:layout_marginTop="@dimen/dimen_30dp"/>
</android.support.constraint.ConstraintLayout>