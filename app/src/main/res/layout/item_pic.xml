<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/dimen_5dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffffff"
        android:padding="@dimen/dimen_10dp"
        android:scaleType="centerInside" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/null_color">

        <View
            android:id="@+id/mask"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/ripple_card" />
    </FrameLayout>

    <TextView
        android:id="@+id/new_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left|top"
        android:layout_margin="@dimen/dimen_10dp"
        android:background="@drawable/new_tag_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/dimen_2dp"
        android:paddingLeft="@dimen/dimen_6dp"
        android:paddingRight="@dimen/dimen_6dp"
        android:text="new"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_12sp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right|top"
        android:layout_margin="@dimen/dimen_6dp"
        android:visibility="visible"
        android:tint="@color/tabTextSelectedColor"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/coin"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingRight="2dp"
        android:layout_gravity="center|right|top"
        android:layout_marginTop="@dimen/dimen_6dp"
        app:srcCompat="@drawable/ic_cup_2"
        android:background="@drawable/coin_lock_bg"/>

</android.support.v7.widget.CardView>