<?xml version="1.0" encoding="utf-8"?>
<selector>
    <item n1:state_enabled="false"
      xmlns:n1="http://schemas.android.com/apk/res/android">
        <shape n1:shape="rectangle">
            <corners n1:radius="@dimen/dimen_3dp" />
            <solid n1:color="#ffcecece" />
        </shape>
    </item>
    <item n2:state_enabled="true" n2:state_pressed="true"
      xmlns:n2="http://schemas.android.com/apk/res/android">
        <shape n2:shape="rectangle">
            <corners n2:radius="@dimen/dimen_3dp" />
            <solid n2:color="#ff62b3f3" />
        </shape>
    </item>
    <item n3:state_enabled="true" n3:state_pressed="false"
      xmlns:n3="http://schemas.android.com/apk/res/android">
        <shape n3:shape="rectangle">
            <corners n3:radius="@dimen/dimen_3dp" />
            <solid n3:color="#ff3ba1f1" />
        </shape>
    </item>
</selector>